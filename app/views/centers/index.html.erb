<div class='flex flex-col justify-center items-center'>
  <!--Nav-->
  <nav id="header" class="bg-blue-700 fixed w-full z-30 top-0 text-white">
    <div class="w-full container mx-auto flex flex-wrap items-center justify-between mt-0 py-2">
      <div class="pl-4 flex items-center">
        <%= link_to 'SicoApp', centers_index_path, class: 'no-underline hover:no-underline hover:text-white font-bold text-2xl lg:text-4xl' %>
      </div>
      <div class="block lg:hidden pr-4">
        <button id="nav-toggle" class="flex items-center p-1 text-blue-100 hover:text-blue-500 focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out">
          <svg class="fill-current h-6 w-6" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <title>Menu</title>
            <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
          </svg>
        </button>
      </div>
      <div class="w-full flex-grow lg:flex lg:items-center lg:w-auto hidden mt-2 lg:mt-0 bg-white lg:bg-transparent text-black p-4 lg:p-0 z-20" id="nav-content">
        <ul class="list-reset lg:flex justify-end flex-1 items-center">
          <li class="hover:bg-blue-500 hover:rounded-md hover:text-black mr-3">
            <%=link_to 'Terapeutas', terapists_index_path, class: 'inline-block py-2 hover:text-blue-100 px-4 text-white no-underline' %>
          </li>
          <% if current_user %>
            <li class="hover:bg-blue-500 hover:rounded-md hover:text-black mr-3">
              <%=link_to 'Mi perfil', users_show_path(:id => current_user.id), class: 'inline-block py-2 hover:text-blue-100 px-4 text-white no-underline' %>
            </li>
            <li class="hover:bg-blue-500 hover:rounded-md hover:text-black mr-3">
              <%=button_to 'Cerrar sesión', destroy_user_session_path, method: :delete, class: 'inline-block py-2 hover:text-blue-100 px-4 text-white no-underline' %>
            </li>
          <% else %>
            <li class="hover:bg-blue-500 hover:rounded-md hover:text-black mr-3">
              <%=link_to 'Iniciar sesión', new_user_session_path, class: 'inline-block py-2 hover:text-blue-100 px-4 text-white no-underline' %>
            </li>
            <li class="hover:bg-blue-500 hover:rounded-md hover:text-black mr-3">
              <%=link_to 'Registro', new_user_registration_path, class: 'inline-block py-2 hover:text-blue-100 px-4 text-white no-underline' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
    
  <!--Hero-->
  <div class="bg-blue-100 w-full pt-40">
    <div class="flex flex-col justify-center items-center">
      <section class="bg-blue-100 flex flex-col justify-center items-center">
        <h1 class="text-5xl text-blue-900 font-bold">Bienvenid@s a SicoApp</h1>
        <h1 class="mt-4 text-xl text-blue-900 font-light">El mejor portal para encontrar a tu terapeuta ideal</h1>
        <div class="flex flex-col justify-center items-center mt-10">
          <%= image_tag("Landing.png", alt: "Icono", size: '500x500') %>
        </div>
        <img>
      </section>
      <section class="flex flex-col justify-center items-center mt-28 bg-blue-900 w-full pt-40">
        <h1 class="xs:text-3xl md:text-4xl font-bold text-white">¡Conoce nuestros centros médicos!</h1>
        <div class="mt-16 mb-40 grid xs:grid-rows-2 xs:gap-y-10 md:gap-x-28 md:grid-cols-2">
          <% @centers.each do |center|%>
            <div class="flex flex-col justify-center items-center">
              <h1 class="mb-4 text-white font-light text-3xl"><%= center.name %></h1>
              <%= link_to centers_show_path(:id => center.id) do 
                image_tag("Centro.png", alt: "Icono", size: '500x500', class: 'rounded-md border-4 border-white hover:border-dashed') 
              end%>
              <h1 class="mt-4 text-white text-xl font-light"><%= center.location %><h1>
            </div>
          <% end %>
        </div>
      </section>
      <section class="flex flex-col justify-center items-center bg-blue-100 w-full pt-40 pb-40">
        <h1 class="text-4xl font-bold text-blue-900">Sigue los siguientes pasos</h1>
        <div class="mt-16 grid xs:grid-rows-3 xs:gap-y-10 md:gap-x-16 md:grid-cols-3">
          <div class="flex flex-col justify-center items-center py-10 px-10 bg-blue-300 border-4 border-blue-900 rounded-lg hover:border-dashed">
            <section class="flex flex-col justify-center items-center rounded-full text-center text-xl bg-sky-800 text-blue-100 px-5 py-2">
              1
            </section>
            <h6 class="mt-4 text-2xl text-blue-900">Registrate e inicia sesión</h6>
            <span style="font-size: 100px;" class="mt-4 material-symbols-outlined text-blue-700">
              person_add
            </span>
          </div>
          <div class="flex flex-col justify-center items-center py-10 px-10 bg-blue-300 border-4 border-blue-900 rounded-lg hover:border-dashed">
            <section class="flex flex-col justify-center items-center rounded-full text-center text-xl bg-sky-800 text-blue-100 px-5 py-2">
              2
            </section>
            <h6 class="mt-4 text-2xl text-blue-900">Elige centro y terapeuta</h6>
            <span style="font-size: 100px;" class="mt-4 material-symbols-outlined text-blue-700">
              local_hospital
            </span>
          </div>
          <div class="flex flex-col justify-center items-center py-10 px-10 bg-blue-300 border-4 border-blue-900 rounded-lg hover:border-dashed">
            <section class="flex flex-col justify-center items-center rounded-full text-center text-xl bg-sky-800 text-blue-100 px-5 py-2">
              3
            </section>
            <h6 class="mt-4 text-2xl text-blue-900">Agenda una hora</h6>
            <span style="font-size: 100px;" class="mt-4 material-symbols-outlined text-blue-700">
              more_time
            </span>
          </div>
        <div>
      </section>
    </div>
  </div>

  <!--Footer-->
  <footer class="bg-sky-800 w-full">
    <div class="container mx-auto px-8 py-2">
      <h1 class="text-center text-base text-white font-light">Creado por Max Yáñez - Todos los derechos reservados®</h1>
    </div>
  </footer>
</div>
